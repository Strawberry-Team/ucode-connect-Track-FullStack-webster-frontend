{
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "https://flowy-photoshop.koyeb.app/api/$1"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      },
      {
        "source": "/uploads/(.*)",
        "destination": "https://flowy-photoshop.koyeb.app/uploads/$1"
      }
    ]
  }